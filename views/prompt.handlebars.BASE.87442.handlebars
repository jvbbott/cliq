<html>
<head>
	<title>cliq</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/cliq.css" rel="stylesheet">
    <link href="/css/header.css" rel="stylesheet">
    <link href="/font-awesome-4.0.3/css/font-awesome.min.css" rel="stylesheet" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <!-- <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css"> -->
    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    
    <script src="js/big-slide.js"></script>
    

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>

	{{> header}}

	<div class="container wrap push" id="main-content">
		
		<h1 class="text-center"> <span class="">Hi {{user.first_name}}!</span></h1>
		<h1>You: {{user_score}}</h1>
		<h1>{{opponent.first_name}}: {{opponent_score}}</h1> 
        </br>



		<h2 class="text-center">{{prompt}}</h2>

	</br></br>

		{{#if has_not_taken_photo}}
			<div class="text-center">
				<h3> Take Photo! </h3>
				<form action="/post-prompt" method="post" enctype="multipart/form-data">
				    <input type="file" name="photo"/>
				    <input type="hidden" name="gameid" value={{gameid}}/>
				    <input type="submit"/>
				</form>
			</div>
		{{else}}
			<div class="text-center">
				<h3> You have already completed this round! </h3>
			</div>
		{{/if}}

	</br></br>

		<div class="text-center">
			<h3> Game log </h3>
			<div class="row">
			<div class="col-xs-1"></div>
			{{#each gamelog_photos}}
				{{#each this}}
					<div class="col-xs-4">
						{{this.path_to_photo}}
						<img src={{this.path_to_photo}} width="100%" height="80px"></img>
					</div>
					<div class="col-xs-1"></div>
				{{/each}}
			{{/each}}
			<div class="col-xs-1"></div>
			</div>
		</div>



	</div>

<script>
     $(document).ready(function() {
            $('.menu-link').bigSlide();
        });

     $(function() {
        $( "#accordion" ).accordion({
          heightStyle: "content"
        });
      });

    </script>

</body>

</html>
































