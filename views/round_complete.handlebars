<html>
<head>
	<title>cliq</title>	
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/cliq.css" rel="stylesheet">
    <link href="/css/header.css" rel="stylesheet">
    <link href="/font-awesome-4.0.3/css/font-awesome.min.css" rel="stylesheet" >
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <!-- <link rel="stylesheet" href="//code.jquery.com/ui/1.10.4/themes/smoothness/jquery-ui.css"> -->
    <script src="//code.jquery.com/ui/1.10.4/jquery-ui.js"></script>
    
    <script src="js/big-slide.js"></script>
    

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>

<body>

	{{> header}}

	<div class="container wrap push" id="main-content">
		
		{{> status_messages }}

		{{#if isJoe}}
		<div class = "row" >
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"><h2> You </h2> </div>
			<div class = "col-xs-4">  </div>
			
			<div class = "col-xs-2"> <h2> Peter </h2></div>
			
			<div class = "col-xs-2"> </div>
		</div>

		<div class = "row" >
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"> <img class="user_photo" src="/images/profile-icon.png"></img> </div>
			<div class = "col-xs-4"> </div>
			<div class = "col-xs-2"> <img class="user_photo" src="/images/profile-icon.png"></img></div>
			<div class = "col-xs-2"> </div>
		</div>

		<div class = "row" >
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"> <h2> 4</h2> </div>
			<div class = "col-xs-4"> </div>
			<div class = "col-xs-2"> <h2> 8</h2> </div>
			<div class = "col-xs-2"> </div>
		</div>
		{{else}}
		<div class = "row"><div class = "col-md-12"></div></div>
		<div class = "row" >
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-4"> <img class="winner_photo" src="/images/profile-icon.png"> </div>
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"> </div>
		</div>

		<div class = "row" >
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-4"><h2> +1!</h2>  </div>
			<div class = "col-xs-2"> </div>
			<div class = "col-xs-2"> </div>
		</div>

		{{/if}}
	<div>
		{{#if isJoe}}
		<h2 class="text-center">You lost this round! Total Score: 4 pts</h2>
		{{else}}
		<h2 class="text-center">You win this round and now have 8 pts!</h2>
		{{/if}}
	</div>
		
		<a href = '/'> <h3 class = "text-center"> Return Home </h3></a>
		

	</div>


	<script>
     $(document).ready(function() {
            $('.menu-link').bigSlide();
        });

     $(function() {
        $( "#accordion" ).accordion({
          heightStyle: "content"
        });
      });

    </script>




</body>

</html>
































